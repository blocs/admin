[
    {
        "description": "管理者ログイン",
        "method": "post",
        "uri": "\/login",
        "query": {
            "email": "admin",
            "password": "admin"
        },
        "assertSee_0": "管理トップ"
    },
    {
        "description": "テストユーザー新規登録\n（<email>\/<password>）",
        "method": "post",
        "uri": "\/admin\/user",
        "query": {
            "email": "<fake.email>",
            "role": [
                "admin"
            ],
            "name": "<fake.name>",
            "password": "<fake.password>",
            "repassword": "<password>"
        },
        "assertSee_0": "「<email>」を登録しました。",
        "data": {
            "id": "lastInsertId"
        }
    },
    {
        "description": "ログアウト",
        "method": "post",
        "uri": "\/logout",
        "assertSee_0": "ログイン"
    },
    {
        "description": "<email>ログイン",
        "method": "post",
        "uri": "\/login",
        "query": {
            "email": "<email>",
            "password": "<password>"
        },
        "assertSee_0": "管理トップ",
        "assertSee_1": "<name>"
    },
    {
        "description": "テストユーザー新規登録\n重複エラー",
        "method": "post",
        "uri": "\/admin\/user",
        "query": {
            "email": "<email>"
        },
        "assertInvalid_0": "email",
        "assertInvalid_1": "password",
        "assertInvalid_2": "repassword"
    },
    {
        "description": "テストユーザー検索",
        "method": "post",
        "uri": "\/admin\/user\/search",
        "query": {
            "search": "<email>"
        },
        "assertSee_0": "<name>"
    },
    {
        "description": "ユーザー名変更",
        "method": "post",
        "uri": "\/admin\/user\/<id>",
        "query": {
            "name": "<fake.name>"
        },
        "assertSee_0": "「<email>」を更新しました。"
    },
    {
        "description": "プロフィール表示",
        "method": "get",
        "uri": "\/admin\/profile\/<id>\/edit",
        "assertStatus": 200
    },
    {
        "description": "アバターアップロード",
        "method": "upload",
        "uri": "\/admin\/profile\/upload",
        "file": "logo.png",
        "assertStatus": 200,
        "data": {
            "file": "content",
            "filename": "json.filename"
        }
    },
    {
        "description": "アバターダウンロード",
        "method": "get",
        "uri": "\/admin\/profile\/<filename>\/download",
        "assertStatus": 200
    },
    {
        "description": "ユーザー名変更",
        "method": "post",
        "uri": "\/admin\/profile\/<id>",
        "query": {
            "name": "<fake.name>",
            "file": "[<file>]"
        },
        "assertSee_0": "プロフィールを更新しました。"
    },
    {
        "description": "ユーザー名変更",
        "method": "post",
        "uri": "\/admin\/profile\/<id>",
        "query": {
            "name": "<fake.name>"
        },
        "assertSee_0": "プロフィールを更新しました。"
    },
    {
        "description": "ユーザー無効化",
        "method": "post",
        "uri": "\/admin\/user\/<id>\/toggle",
        "assertSee_0": "「<email>」を無効にしました。"
    },
    {
        "description": "テストユーザー削除",
        "method": "post",
        "uri": "\/admin\/user\/<id>\/destroy",
        "assertSee_0": "1 件のデータを削除しました。"
    },
    {
        "description": "ログアウト",
        "method": "post",
        "uri": "\/logout",
        "assertSee_0": "ログイン"
    }
]
