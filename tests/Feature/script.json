[
    {
        "description": "管理者ログイン",
        "method": "post",
        "uri": "\/login",
        "query": {
            "email": "admin",
            "password": "admin"
        },
        "assertSee_0": "管理トップ",
        "assertSee_1": "admin"
    },
    {
        "description": "キャッシュクリア",
        "method": "get",
        "uri": "\/clear",
        "assertStatus": 200
    },
    {
        "description": "テストユーザー新規登録\n（<fake.email>\/<fake.password>）",
        "method": "post",
        "uri": "\/admin\/user",
        "query": {
            "email": "<email>",
            "role": [
                "admin"
            ],
            "name": "<fake.name>",
            "password": "<password>",
            "repassword": "<password>"
        },
        "assertSee_0": "「<email>」を登録しました。",
        "data": {
            "id": "maxId.users"
        }
    },
    {
        "description": "テストユーザー検索",
        "method": "post",
        "uri": "\/admin\/user\/search",
        "query": {
            "search": "<email>"
        },
        "assertSee_0": "<email>"
    },
    {
        "description": "ログアウト",
        "method": "post",
        "uri": "\/logout",
        "assertSee_0": "ログイン"
    },
    {
        "description": "ログイン前にユーザー管理を表示",
        "method": "get",
        "uri": "\/admin\/user",
        "assertSee_0": "ログイン"
    },
    {
        "description": "<email>ログイン",
        "method": "post",
        "uri": "\/login",
        "query": {
            "email": "<email>",
            "password": "<password>"
        },
        "assertSee_0": "管理トップ",
        "assertSee_1": "<name>"
    },
    {
        "description": "テストユーザー新規登録\n重複エラー",
        "method": "post",
        "uri": "\/admin\/user",
        "query": {
            "email": "<email>"
        },
        "assertInvalid_0": "email",
        "assertInvalid_1": "password",
        "assertInvalid_2": "repassword"
    },
    {
        "description": "ユーザー一覧表示",
        "method": "get",
        "uri": "\/admin\/user",
        "assertSee_0": "ユーザー管理"
    },
    {
        "description": "テストユーザー検索",
        "method": "post",
        "uri": "\/admin\/user\/search",
        "query": {
            "search": "<email>"
        },
        "assertSee_0": "<email>"
    },
    {
        "description": "ユーザー新規登録画面表示",
        "method": "get",
        "uri": "\/admin\/user\/create",
        "assertSee_0": "ユーザー管理"
    },
    {
        "description": "ユーザー編集画面表示",
        "method": "get",
        "uri": "\/admin\/user\/<id>\/edit",
        "assertSee_0": "ユーザー管理"
    },
    {
        "description": "ユーザー名変更",
        "method": "post",
        "uri": "\/admin\/user\/<id>",
        "query": {
            "name": "<fake.name>"
        },
        "assertSee_0": "「<email>」を更新しました。"
    },
    {
        "description": "プロフィール表示",
        "method": "get",
        "uri": "\/admin\/profile\/<id>\/edit",
        "assertStatus": 200
    },
    {
        "description": "アバターアップロード",
        "method": "upload",
        "uri": "\/admin\/profile\/upload",
        "file": "logo.png",
        "assertStatus": 200,
        "data": {
            "filename": "json.filename",
            "name": "json.name",
            "size": "json.size",
            "thumbnail": "json.thumbnail"
        }
    },
    {
        "description": "アバターダウンロード",
        "method": "get",
        "uri": "\/admin\/profile\/<filename>\/download",
        "assertStatus": 200
    },
    {
        "description": "アバターサムネイルダウンロード",
        "method": "get",
        "uri": "\/admin\/profile\/<filename>\/thumbnail\/download",
        "assertStatus": 200
    },
    {
        "description": "ユーザー名変更",
        "method": "post",
        "uri": "\/admin\/profile\/<id>",
        "query": {
            "name": "<fake.name>",
            "file": "[{\"filename\": \"<filename>\",\n\"name\": \"<name>\",\n\"size\": \"<size>\",\n\"thumbnail\": \"<thumbnail>\"}]"
        },
        "assertSee_0": "プロフィールを更新しました。"
    },
    {
        "description": "ユーザー名変更",
        "method": "post",
        "uri": "\/admin\/profile\/<id>",
        "query": {
            "name": "<fake.name>"
        },
        "assertSee_0": "プロフィールを更新しました。"
    },
    {
        "description": "ユーザー無効化",
        "method": "post",
        "uri": "\/admin\/user\/<id>\/toggle",
        "assertSee_0": "「<email>」を無効にしました。"
    },
    {
        "description": "ユーザー有効化",
        "method": "post",
        "uri": "\/admin\/user\/<id>\/toggle",
        "assertSee_0": "「<email>」を有効にしました。"
    },
    {
        "description": "テストユーザー削除",
        "method": "post",
        "uri": "\/admin\/user\/<id>\/destroy",
        "assertSee_0": "1 件のデータを削除しました。"
    },
    {
        "description": "テストユーザー新規登録\n（<fake.email>\/<fake.password>）",
        "method": "post",
        "uri": "\/admin\/user",
        "query": {
            "email": "<email>",
            "role": [
                "admin"
            ],
            "name": "<fake.name>",
            "password": "<password>",
            "repassword": "<password>"
        },
        "assertSee_0": "「<email>」を登録しました。",
        "data": {
            "del_id_1": "lastInsertId"
        }
    },
    {
        "description": "テストユーザー新規登録\n（<fake.email>\/<fake.password>）",
        "method": "post",
        "uri": "\/admin\/user",
        "query": {
            "email": "<email>",
            "role": [
                "admin"
            ],
            "name": "<fake.name>",
            "password": "<password>",
            "repassword": "<password>"
        },
        "assertSee_0": "「<email>」を登録しました。",
        "data": {
            "del_id_2": "lastInsertId"
        }
    },
    {
        "description": "ユーザー一覧から、テストユーザーを一括削除",
        "method": "post",
        "uri": "\/admin\/user\/select",
        "query": {
            "users": [
                {
                    "selectedRows": [
                        "<del_id_1>"
                    ]
                },
                {
                    "selectedRows": [
                        "<del_id_2>"
                    ]
                }
            ]
        },
        "assertSee_0": "2 件のデータを削除しました。"
    },
    {
        "description": "ログアウト",
        "method": "post",
        "uri": "\/logout",
        "assertSee_0": "ログイン"
    }
]
